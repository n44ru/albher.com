<!-- Contact -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 id="contact-title" class="section-heading text-uppercase">{{ 'menu.contactos' | trans({}, 'base') }}</h2>
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form name="sentMessage" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="form-control"  name="c_name" id="name" type="text" placeholder="{{ 'contacto.n' | trans({}, 'base') }}" required>
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="c_email" id="email" type="email" placeholder="{{ 'contacto.e' | trans({}, 'base') }}" required>
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="c_phone" id="phone" type="tel" placeholder="{{ 'contacto.t' | trans({}, 'base') }}" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea class="form-control"
                                          name="c_text" placeholder="{{ 'contacto.m' | trans({}, 'base') }}"></textarea>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button id="contact-btn"class="btn btn-primary btn-xl text-uppercase" type="submit">{{ 'web.comsend' | trans({}, 'base') }}</button>
                            <br>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>