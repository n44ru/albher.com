<section class="bg-grey">
    <div class="container">
        <div id="carouselContent" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                {% set i=0 %}
                {% for c in comments if c.active == 1 %}
                <div class="carousel-item {% if i==0 %}active{% endif %} text-center p-4 text-white">
                    <h5>{{ c.name }}</h5>
                    <p><strong>{{ c.text }}</strong></p>
                </div>
                    {% set i=i+1 %}
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carouselContent" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselContent" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="intro-text text-center">
            <a class="btn btn-primary btn-xl text-uppercase" data-toggle="modal" href="#commentmodal">{{ 'web.com' | trans({}, 'base') }}</a>
        </div>
        <br>
    </div>
</section>
<div class="portfolio-modal modal fade" id="commentmodal" tabindex="-1" role="dialog"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <div class="lr">
                    <div class="rl"></div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <div class="modal-body">
                            <form method="post">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input class="form-control" name="reviews-name" id="name" type="text" placeholder="{{ 'contacto.n' | trans({}, 'base') }}" required data-validation-required-message="Please enter your name.">
                                            <p class="help-block text-danger"></p>
                                        </div>
                                        <div class="form-group">
                                            <textarea class="form-control" name="reviews-text" id="message" placeholder="{{ 'contacto.m' | trans({}, 'base') }}" required data-validation-required-message="Please enter a message."></textarea>
                                            <p class="help-block text-danger"></p>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-lg-12 text-center">
                                        <button class="btn btn-primary btn-xl text-uppercase" type="submit">{{ 'web.comsend' | trans({}, 'base') }}</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>