<section id="gallery">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">{{ 'menu.galeria' | trans({}, 'base') }}</h2>
                <br>
                {#<h3 class="section-subheading text-muted text-center">Lorem ipsum dolor sit amet consectetur.</h3>#}
            </div>

            <div class="col-md-12">
                <div class="demo-gallery">
                    <ul id="lightgallery" class="list-unstyled row">
                        {% for g in gallery %}
                        <li class="col-md-2" data-src="{{ asset('uploads/gallery/' ~ g.file) }}"
                            data-sub-html="
                            {% if locale=='es' %}
                                    <h4>{{ g.titlees }}</h4><p>{{ g.textes }} </p>
                                {% elseif locale=='en' %}
                                    <h4>{{ g.titleen }}</h4><p>{{ g.texten }} </p>
                                {% else %}
                                    <h4>{{ g.titlede }}</h4><p>{{ g.textde }} </p>
                                {% endif %}">
                            <a href="">
                                <img class="img-thumbnail imagegallery" src="{{ asset('uploads/gallery/' ~ g.file) }}">
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>