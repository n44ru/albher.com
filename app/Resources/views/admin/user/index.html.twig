{% extends 'admin.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>Usuarios</h1>
            <hr>
            <a href="{{ path('admin_user_new') }}"><button class="btn btn-primary">Insertar</button></a>
            <hr>
            <table class="table dynamic">
                <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Rol</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.role }}</td>
                        <td>
                            <a href="{{ path('admin_user_edit', { 'id': user.id }) }}"><button class="btn btn-danger"><i class="fa fa-edit"></i> </button> </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

